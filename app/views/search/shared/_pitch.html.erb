<% if context_program and (need?(["mentor", "selector", "panellist"], context_program) or need?(["company_admin", "program_admin"], current_organisation) or current_user.super_admin? or pitch.owner?(current_user) or (pitch.view_other_team_pitch?(current_user) and pitch.public?)) %>
<div style="" class="innercontent people-row">
  <div class="row">
		<div class="col-md-12">
			<div class="panel panel-white panel-shadow ui-widget collapses" data-collapsed="0"><!-- to apply shadow add class "panel-shadow" -->
				<!-- panel head -->
				<div class="panel-heading">
					<div class="panel-title title_option">
						<%= link_to(pitch.title, edit_program_pitch_path(context_program, pitch)) %>
						<span class="pull-left user_rol">
							(Project)
						</span>
					</div>
					<div class="panel-options">
						<a href="#" class="ui-expander gn-icon gn-icon-chevron-down" data-rel="collapse"></a>
					</div>
				</div>
				<!-- panel body -->
				<div class="panel-body">
					<div class="row user_data">
						<div class="pull-left user_data_img_cotainer"><%= link_to(image_tag(pitch.avatar.logo.url, :class => "img-responsive user-img"), edit_program_pitch_path(context_program, pitch)) %></div>
						<b>Summary:</b> <%= pitch.summary.try(:content) %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>