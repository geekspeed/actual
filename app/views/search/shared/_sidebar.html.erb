<% page ||= "search" %>
  <% if page == "search" %>
    <div class="gn-scroller">
      <ul class="gn-menu">
        <li>
          <%= link_to("All", index_search_path(context_program, :people=>true, :projects=>true, :content=>true, :q=>params[:q]), :class=>"gn-icon gn-icon-quill") %>
        </li>
        <li>
          <%= link_to("People", index_search_path(context_program, :people=>true, :q=>params[:q]), :class=>"gn-icon gn-icon-quill") %>
        </li>
        <li>
          <%= link_to("Projects", index_search_path(context_program, :projects=>true, :q=>params[:q]), :class=>"gn-icon gn-icon-quill") %>
        </li>
        <li>
          <%= link_to("Content", index_search_path(context_program, :content=>true, :q=>params[:q]), :class=>"gn-icon gn-icon-quill") %>       
        </li>
        <% if ProgramScope.where(:program_id => context_program.id).try(:first).try(:associated_organisation) %>
          <li>
            <%= link_to("Organisations", index_search_path(context_program, :organisations=>true, :q=>params[:q]), :class=>"gn-icon gn-icon-quill") %>       
          </li>
        <% end %>
      </ul>
    </div>
<% end %>

<% content_for :sidebar do %>
    <%= javascript_include_tag "classie" %>
    <%= javascript_include_tag "gnmenu" %>
    <script>
     $(document).ready(function(){
      new gnMenu( document.getElementById( 'gn-menu' ) );
     })
    </script>
    
<% end %>