<% page = "report_program"; ppage = "report_branding"%>
<%= render "shared/program_sidebar", :page => page, :ppage => ppage %>


<div class="row page_head">
  <div class="col-md-8">
    <h3>
      <i class="gn-icon gn-new gn-icon-milestone-new gn-icon-large"></i>
      Report Branding
      <i class="glyphicon glyphicon-question-sign help-sign" data-toggle="tooltip" data-placement="bottom" title="Report branding lets you brand all the pdf generated by the platform"></i>
    </h3>
  </div>
  <div class="col-md-4 breadcrumb">
    <a href="#"><%=context_program.title%></a> / <a href=<%= program_reportings_path(context_program) %>>Report</a> / <a href="#" class="active_bread">Report Branding</a>
  </div>
</div>
<div class="row main-row">
	<div class="col-md-10 main-right-section">
	<h2 class="titleLine title-normal"><span style="font-weight:bold;">Report Branding</span>
    <div style="width: 14%;float:right;text-align: Center;">
     <a class="btn btn-info" id="branding-hint" style="width: 49%;margin: auto;">* Hint</a>
      <div id="branding-hintbox" style="margin-top: 5px; padding: 5px; width: 14%; display: block; background-color: rgb(255, 255, 255);">
        <div class="hint-title" rel="tooltip" title="Shortcode for current date">#date</div> 
       </div>
    </div></h2>
	<%= form_for(@report_brandings, :url => program_program_report_brandings_path(context_program), :html => {:class => "reqForm no_float", :method=>"post"}) do |f| %>
		<div class="row">
	    	<div class="col-md-12">
		    	<div class="panel panel-white panel-shadow ui-widget collapses panel-table panel-with-bottom-padding" data-collapsed="0">
					<div class="panel-heading">
						<div class="panel-title title_option">
							<a href="sec1" name="sec1" class="section_nav"></a>
							<h3>Header</h3>
						</div>
						<div class="panel-options">
							<a href="#-" class="ui-expander gn-icon gn-icon-chevron-down" data-rel="collapse"></a>
						</div>
					</div>
					<div class="panel-body">
						<%= f.text_area :header, :id => "report-header", :class => "form-control summernote", :style=>"width:100%;" %>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
	    	<div class="col-md-12">
		    	<div class="panel panel-white panel-shadow ui-widget collapses panel-table panel-with-bottom-padding" data-collapsed="0">
					<div class="panel-heading">
						<div class="panel-title title_option">
							<a href="sec2" name="sec2" class="section_nav"></a>
							<h3>Signature</h3>
						</div>
						<div class="panel-options">
							<a href="#-" class="ui-expander gn-icon gn-icon-chevron-down" data-rel="collapse"></a>
						</div>
					</div>
					<div class="panel-body">
						<%= f.text_area :signature, :id => "report-signature", :class => "form-control summernote", :style=>"width:100%;" %>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
	    	<div class="col-md-12">
		    	<div class="panel panel-white panel-shadow ui-widget collapses panel-table panel-with-bottom-padding" data-collapsed="0">
					<div class="panel-heading">
						<div class="panel-title title_option">
							<a href="sec3" name="sec3" class="section_nav"></a>
							<h3>Footer</h3>
						</div>
						<div class="panel-options">
							<a href="#-" class="ui-expander gn-icon gn-icon-chevron-down" data-rel="collapse"></a>
						</div>
					</div>
					<div class="panel-body">
						<%= f.text_area :footer, :id => "report-footer", :class => "form-control summernote", :style=>"width:100%;" %>
					</div>
				</div>
			</div>
		</div>
		<%= f.submit :submit, :id=>"submit"%>
	<% end %>
	</br>
</div>
	<div class="col-md-2 stick_me">
		<ul class="navigator-menu">
			<li id="nav_sec1" class="active-navigator-title">
				<p>Main Section</p>
				<ul>
					<li><a href="#sec1">Header</a></li>
					<li><a href="#sec2">Signature</a></li>
					<li><a href="#sec3">Footer</a></li>
				</ul>
			</li>
		</ul>
	</div>
</div>
<%= javascript_include_tag "jquery.sticky-kit.min" %>
<script type="text/javascript" charset="utf-8">
  $(function() {
	$(".summernote").summernote();
  });
	$('#branding-hint').on('click', function(e){
	    $("#branding-hintbox").toggle();
	});
	$(".hint-title[rel=tooltip]").tooltip();
	
	jQuery(document).ready(function($){
    $(".stick_me").stick_in_parent({
      parent: $(".two_sides_content"),
      offset_top: 300
    });
    
    $('.help-sign').tooltip();
  });
  $('.navigator-menu li ul li a').click(function(){
      $('.navigator-menu li ul li').removeClass('active-navigator-section');
      $('.navigator-menu li').removeClass('active-navigator-title');
      $(this).parent().addClass('active-navigator-section');
      $(this).parent().parent().parent().addClass('active-navigator-title');
    $('html, body').animate({
        scrollTop: $('[name="' + $.attr(this, 'href').substr(1) + '"]').offset().top - 60
    }, 500);
    return false;
  });
</script>

<style>
.hint-title{padding:5px;font-weight:bold;text-align:left;font-size: 14px;}
#branding-hintbox{position:absolute;border:2px solid;
border-radius:25px;z-index:1000;}
</style>