<style type="text/css">
  .clr {
    clear: both;
}
.add_new_faq{float:left;}
.upload {
border:0px solid #000000;
}

</style>
<%= form_for(faq, :url => faq_update_organisation_path(@organisation, :faq_id => faq.id), :method => :put) do |fa| %>
  <div style="margin-bottom: 10px;"><%= fa.text_field :question , :class => "autogrow form-control", :placeholder => "Type your question here" %></div>
  <div style="margin-bottom: 0;" class="new-status-box"><%= fa.text_area :answer ,:placeholder => "Type your answer to the question here", :id => "eco_faq_#{count}" %></div>

  <div class="link_box" style="margin-top:8px;">
    <span class="img_link_lbl">Image Link:</span>
    <span class="vid_link_lbl">Youtube / Vimeo Link:</span>
    <span class="l_link_lbl">Link or File:</span>
    <span class="gallery_link_lbl">Pictures:</span>
    <span class="l_link_lbl vid_link_lbl img_link_lbl gallery_link_lbl">
      <%= fa.text_field :link, :class => "file_url form-control" %>
    </span>
    <span class="l_link_lbl img_link_lbl gallery_link_lbl upload">
    OR <%= fa.file_field :attachment %>
    </span>
  </div>
<div class="box-content-bottom">
  <%= link_to image_tag("ico-image.png"), "#", :class => "addImage", :name => "img_link_lbl" %>
  <%= link_to image_tag("ico-video.png"), "#", :class => "addImage", :name => "vid_link_lbl" %>
  <%= link_to image_tag("ico-link.png"), "#", :class => "addImage", :name => "l_link_lbl" %>
  <%= link_to image_tag("ico-gallery.png"), "#", :class => "addImage", :name => "gallery_link_lbl" %>

  <a href="#" class="showNewTagCont" style="margin-top:10px;"><img src="/images/ico-tag.png" alt="Ico-tag"></a>

  <div style="margin-left: 10px; display:inline;">
    <span class="newTag" style="display:none">
    <%= fa.text_field :tags, class: "newtag newTagVal", placeholder: "+ add tag", style: "margin-left: 10px; width: 100px;margin_top:0px;" %>
    </span>
  </div>

  <% relevant_pages = %w(eco_summary_page) %>
  <span class= "pull-right"> <%= fa.collection_select :relevant_page, relevant_pages, :to_s, :titleize, {:include_blank => 'Tag to', :selected => 'eco_summary_page'}, :class=>"form-control", :style=>"margin-right:0;" %> </span>
	<div class="clear"></div>
</div>

<div class="clr"></div>
<div>
  <div class="clr"></div>
  <div class="pull-right"><%= fa.submit "Save", :id => "submit" %></div>
</div>
<% end %>