<%= render "devise/shared/navbar", page: "subscriptions" %>
<div id="rightcontent"  class="two_sided_right_content">
	<div class="row">
		<div class="col-md-12">
			<div data-collapsed="0" class="panel panel-custom panel-shadow ui-widget collapses panel-table" style="margin-bottom:2px;">
				<div class="panel-heading">
					<div class="panel-title title_option">
						<h3>Product</h3>
						<span>Create New Products</span>
					</div>
					<div class="panel-options">
						<a data-rel="collapse" id="toggle-setting-box" class="ui-expander gn-icon gn-icon-chevron-up" href="#-"></a>
					</div>
				</div>
						
				<div class="panel-body">
		 			<%= form_for :sub_form, :url => organisation_subscriptions_path do |f| %>
		    	<%render "form", f: f%>
		  		<% end %>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
    <div class="col-md-12">
      <div data-collapsed="0" class="panel panel-custom panel-shadow ui-widget collapses panel-table" style="margin-bottom:2px;">
        <div class="panel-heading">
          <div class="panel-title title_option">
            <h3>All Products</h3>
            <span></span>
          </div>
          <div class="panel-options">
            <a data-rel="collapse" id="toggle-setting-box" class="ui-expander gn-icon gn-icon-chevron-up" href="#-"></a>
          </div>
        </div>
            
        <div class="panel-body">
            <table class="table table-bordered table-striped">
              <tr>
                <th>
                  Name
                </th>
                 <th>
                  Pricing Type
                </th>
                 <th>
                  Description
                </th>

                 <th>
                  Price in
                </th>
                 <th>
                  Number Of seats
                </th>
              </tr>
              <% @all_subscription.each do |sub| %>
                <tr>
                  <td>
                    <%=sub.name%>
                  </td>
                  <td>
                  	<%= sub.interval %>
                  </td>
                  <td>
                    <%=sub.description%>
                  </td>
                  <td>
                    <%=sub.currency_code%>
                  </td>
                  <td> 
                  	.....
                  </td>
                </tr>
              <%end%>
           </table>
          </div> 
        </div>
      </div>
    </div>
  </div>
</div>