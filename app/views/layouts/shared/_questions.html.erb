<!--QUESTIONS-->
<div class="question">
  <a id="question_link" href="#">Ask a question</a>
  <div id="question_container">
	  <h3><b>Ask a Question</b></h3>
		<br>
		<%= form_tag ask_questions_dashboard_path, id: "question_form" do %>
			<input type="hidden" name="action" value="jquestion">
			<div>
			<p>Subject:</p>
			<input type="text" name="title" id="title" class="title form-control">
			</div>
			<br />
			<div>
			<p>Description:</p>
			<textarea style="height: 100px; width: 300px;" name="description" class="description form-control" cols="25" rows="8"></textarea><br>
			</div>

			<input type="hidden" value="Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Ubuntu Chromium/28.0.1500.71 Chrome/28.0.1500.71 Safari/537.36" name="user_agent">
			<input type="hidden" value="/niederkofler/150-competition/community/" name="request_uri">
			<input type="hidden" name="request_user_id" value="150">
			<div>
			<% unless user_signed_in? %>
  			<%= show_simple_captcha(:multiple => false) %>
        <br />
      <% end %>
			<input type="submit" style="width:100px" class="question_send pull-left" id="submit" value="Send">
			<input type="reset" style="width:100px" class="question_cancel pull-left" id="cancel_btn" value="Cancel">
			<div class="clear"></div>
			</div>
		<% end %>
	</div>
	<div id="question_container_ok" class="alert alert-success">
		<a class="closequestion pull-right fancybox-close glyphicon glyphicon-remove-circle" href="#"></a>
		Question has been sent successfully.
	</div>		
</div>
<!--QUESTIONS ENDS-->
