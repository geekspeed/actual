<div style="display: none" id="show_alert_message">
  <div class="lightbox_box">
    <%= content_tag :div do%>
      <%= content_tag :p, "You need to log in to access this page"%>
    <% end %>
  </div>
</div>

<div style="display: none" id="show_alert_message_buzz">
  <div class="lightbox_box">
    <%= content_tag :div do%>
      <%= content_tag :p, "You need to log in to access this page"%>
    <% end %>
  </div>
</div>

<% page = page || nil %>
<% content_for :title do %>
  <%#= "Program Designer" %>
<% end %>
<% content_for :navigation do %>
  <div id="mainnavi">
    <nav class="navbar navbar-default main-navbar-inner" role="navigation">
      <div class="navbar-header">
        <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse collapse" style="border: none;">
        <ul class="nav navbar-nav main-navi-bar">
          <%= content_tag :li, :class => ((page == "buzz") ? "active mainnav_link" : "mainnav_link") do%>
            <%= link_to "Buzz", "#show_alert_message", class: "fancybox" %>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="navbar-collapse collapse pull-right">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if page == 'eco_summary' %> mainnav_link">
          <%= link_to("Summary", organisation_path(@organisation), :class=>"admin_dropdown") %>
        </li>
      </ul>
    </div>
    <div class="clr"></div>
  </div>
<% end %>
