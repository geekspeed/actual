<%if !@program.customize_admin_emails.where(:email_name => "collaboration_successfull").first %>
<% @coll_succ_subject = "Collaboration request accepted: #XXX meet #YYY" %>
<%@coll_succ = render "collaboration_default"%>
<%end%>

<div class="row ">
  <div class="col-md-12">
    <div data-collapsed="0" class="panel panel-white panel-shadow ui-widget collapses panel-table">
      <div class="panel-heading relative_panel_head ">
        <div class="panel-title title_option">
          <a href="sec1" name="sec1" class="section_nav"></a>
          <h3><label>Collaboration Successful Mail</label></h3>
        </div>
        <div class="panel-options">
          <a data-rel="collapse" class="ui-expander gn-icon gn-icon-chevron-down" href="#"></a>
        </div>
      </div>
      <div style="" class="panel-body">
        <div class="row">
          <div class="col-sm-4 setting-font"><div>Subject</div></div>
          <div class="col-sm-8">
            <%= text_field_tag "subject[collaboration_successfull]" ,@coll_succ_subject,:cols=>"40", :class=>"form-control form-style-1"%>
          </div>
        </div>
        <br />
        <div class="row">
          <div class="col-sm-12 setting-font"><div>Body</div> <%= text_area_tag "feedback[collaboration_successfull]" ,@coll_succ,:cols=>"40", :class=>"form-control"%></div>
        </div>      
      </div><!-- panel-body -->
    </div>
  </div>
</div>
<br />
<p>
  <%= submit_tag "Save", :id => "submit" %>
</p>
